# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=SynthoraAI Agentic Pipeline

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MCP Server Settings
MCP_PORT=8001
MCP_MAX_CONNECTIONS=100

# LLM Configuration
# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Cohere (Optional)
COHERE_API_KEY=your-cohere-api-key

# Default LLM Provider (google, openai, anthropic, cohere)
DEFAULT_LLM_PROVIDER=google
DEFAULT_MODEL=gemini-pro
TEMPERATURE=0.7
MAX_TOKENS=2000

# Vector Store Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=synthora-ai

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=synthora_ai

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=synthora-ai-processing

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=synthora-ai-rg
AZURE_STORAGE_ACCOUNT=synthoraaistg
AZURE_STORAGE_KEY=your-storage-key

# Agent Configuration
MAX_ITERATIONS=10
AGENT_TIMEOUT=300
ENABLE_HUMAN_IN_LOOP=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_CONTENT_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_SUMMARIZATION=true
ENABLE_CLASSIFICATION=true
