    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.0"
  },
  "engines": {
    "node": "18.x"
